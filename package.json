{
    "name": "node-typescript-boilerplate",
    "version": "1.0.0",
    "description": "Enterprise NodeJs/Typescript API boilerplate",
    "main": "index.ts",
    "keywords": [
        "node",
        "typescript",
        "API"
    ],
    "author": "Fortune Ochi <fortuneochi@gmail.com>",
    "license": "MIT",
    "scripts": {
        "rm-files": "rm -r -f coverage .nyc_output dist",
        "nyc": "nyc -r=text -r=html -i ts-node/register -e .ts mocha",
        "test-cover": "npm run rm-files && npm run nyc",
        "test": "mocha",
        "tsc": "tsc -p tsconfig.json",
        "no-build": "npx ts-node src/index.ts",
        "start-node": "node dist/index.js",
        "start": "npm run rm-files && npm run tsc && npm run start-node"
    },
    "dependencies": {
        "@hapi/joi": "^16.0.1",
        "agenda": "^2.1.0",
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.1.0",
        "event-dispatch": "^0.4.1",
        "express": "^4.17.1",
        "helmet": "^3.21.0",
        "inversify": "^5.0.1",
        "inversify-agenda": "^1.1.0",
        "inversify-express-utils": "^6.3.2",
        "inversify-logger-middleware": "^3.1.0",
        "jsonwebtoken": "^8.5.1",
        "mailgun-js": "^0.22.0",
        "method-override": "^3.0.0",
        "mongoose": "^5.7.1",
        "reflect-metadata": "^0.1.13",
        "winston": "^3.2.1",
        "winston-transport": "^4.3.0"
    },
    "devDependencies": {
        "@types/agenda": "^2.0.5",
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.2",
        "@types/cors": "^2.8.6",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/hapi__joi": "^15.0.4",
        "@types/helmet": "0.0.44",
        "@types/jsonwebtoken": "^8.3.3",
        "@types/mailgun-js": "^0.22.3",
        "@types/method-override": "0.0.31",
        "@types/mocha": "^5.2.7",
        "@types/mongoose": "^5.5.17",
        "@types/supertest": "^2.0.8",
        "@types/winston": "^2.4.4",
        "chai": "^4.2.0",
        "mocha": "^6.2.0",
        "nyc": "^14.1.1",
        "supertest": "^4.0.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.6.3"
    }
}
