{
    "name": "node-typescript-boilerplate",
    "version": "1.0.0",
    "description": "Enterprise NodeJs/Typescript API boilerplate",
    "main": "index.ts",
    "keywords": [
        "node",
        "typescript",
        "API"
    ],
    "author": "Fortune Ochi <fortuneochi@gmail.com>",
    "license": "MIT",
    "scripts": {
        "rm-files": "rm -r -f coverage .nyc_output dist",
        "nyc": "nyc -r=text -r=html -i ts-node/register -e .ts mocha",
        "test-cover": "npm run rm-files && npm run nyc",
        "test": "mocha",
        "tsc": "tsc -p tsconfig.json",
        "start-node": "node dist/index.js",
        "start": "npm run rm-files && npm run tsc && npm run start-node"
    },
    "dependencies": {
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "helmet": "^3.21.0",
        "inversify": "^5.0.1",
        "inversify-express-utils": "^6.3.2",
        "mongoose": "^5.7.1",
        "reflect-metadata": "^0.1.13"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.2",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/helmet": "0.0.44",
        "@types/mocha": "^5.2.7",
        "@types/mongoose": "^5.5.17",
        "@types/supertest": "^2.0.8",
        "chai": "^4.2.0",
        "mocha": "^6.2.0",
        "nyc": "^14.1.1",
        "supertest": "^4.0.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.6.3"
    }
}
